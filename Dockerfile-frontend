# ✅ Stage 1 — Build React app using Node 22
FROM node:22-alpine AS build
WORKDIR /app

RUN apk add --no-cache git

# Clone the latest code freshly each time
RUN git clone --depth=1 --branch main https://github.com/vk-vaishnavi10/wanderly . \
 && git pull origin main

RUN npm install
RUN npm run build

# ✅ Stage 2 — Serve with Nginx
FROM nginx:1.25-alpine
COPY --from=build /app/dist /usr/share/nginx/html
COPY travel/nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
HEALTHCHECK CMD wget --spider -q http://localhost:80/ || exit 1
CMD ["nginx", "-g", "daemon off;"]
